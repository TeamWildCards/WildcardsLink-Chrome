{
  "name": "WildcardsLink for ChromeOS",
  "description": "Connect Scratch 3.0 to a Wildcards Board.",
  "version": "0.0.1",
  "manifest_version": 2,
  
  
  "sockets": {
    "tcp": {
      "connect": "*"
    },

    "tcpServer": {
      "listen": "*"
    }
  },
  "permissions": [
    "serial"
  ],
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "icons": { "16": "wc_icon_circular.png", "128": "wc_icon_circular.png" }
  
}
